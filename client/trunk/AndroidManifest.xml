<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tylerhjones.boip.client"
    android:versionCode="27"
    android:versionName="1.0.3-r1" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:description="@string/app_desc" >
        <activity
            android:name=".BoIPActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity
            android:name=".DiscoverServersActivity"
            android:label="@string/findservers_title">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> -->
        <activity
            android:name=".ServerInfoActivity"       
            android:label="@string/server_info">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".BarcodeScannerActivity"
            android:label="@string/scanner_activity">
    		<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
        <activity 
            android:name=".BoIPWidgetConfigure"
    		android:label="@string/widget_config_title">
    		<intent-filter>
        		<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
    		</intent-filter>
		</activity>
        
        <receiver 
            android:name="com.tylerhjones.boip.client.BoIPWidgetProvider"
            android:label="@string/widget_label">
    		<intent-filter>
    	    	<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    	    </intent-filter>
    		<meta-data
    	    	android:name="android.appwidget.provider" 
    	    	android:resource="@xml/widget_info" />
		</receiver> 
			
        <support-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />
        
        <service android:name="com.tylerhjones.boip.client.BoIPService" >
		</service> 
		
    </application>     
      
</manifest>